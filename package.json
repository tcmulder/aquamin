{
	"name": "aquamin",
	"version": "3.0.2",
	"description": "Parcel build tool for Aquamarine",
	"private": true,
	"engines": {
		"node": ">=16.13.2",
		"npm": ">=9.6.3"
	},
	"config": {
		"lint_paths": "./assets",
		"build_paths": "./assets/*/*.bundle.js ./assets/*/*.bundle.css ./assets/block-library/*/*script.js ./assets/block-library/*/index.js ./assets/block-library/*/*style.css",
		"watch_paths": "./dist/**/*.css,./dist/**/*.js,./**/*.php"
	},
	"scripts": {
		"start": "npm-run-all --parallel builder server",
		"build": "npm run clean && parcel build $npm_package_config_build_paths --no-cache && npm run build:post",
		"build:post": "npm run static",
		"builder": "parcel watch $npm_package_config_build_paths",
		"server:pre": "test -f .env && exit 0 || echo \"\\033[31mNo .env file found (use .env.example as a template to create one)\\033[0m\"; exit 1",
		"server": "npm run server:pre && browser-sync start --logFileChanges=`grep LOG_FILE_CHANGES= .env | cut -d '=' -f2` --no-open --proxy `grep URL= .env | cut -d '=' -f2` --files $npm_package_config_watch_paths",
		"static": "del ./dist/static/* && ncp ./assets/static ./dist/static --filter '**/*.*'",
		"docs": "docsify serve docs --open --port 4000",
		"lint": "eslint $npm_package_config_lint_paths",
		"clean": "del ./.parcel-cache/*"
	},
	"author": "@tcmulder",
	"license": "ISC",
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true
		}
	},
	"alias": {
		"wp": {
			"global": "wp"
		},
		"@wordpress/element": {
			"global": "wp.element"
		},
		"@wordpress/i18n": {
			"global": "wp.i18n"
		},
		"@wordpress/blocks": {
			"global": "wp.blocks"
		},
		"@wordpress/block-editor": {
			"global": "wp.blockEditor"
		},
		"@wordpress/components": {
			"global": "wp.components"
		},
		"@wordpress/server-side-render": {
			"global": "wp.serverSideRender"
		},
		"@wordpress/dom-ready": {
			"global": "wp.domReady"
		},
		"@wordpress/hooks": {
			"global": "wp.hooks"
		},
		"@wordpress/compose": {
			"global": "wp.compose"
		},
		"@wordpress/data": {
			"global": "wp.data"
		},
		"@wordpress/edit-post": {
			"global": "wp.editPost"
		},
		"@wordpress/html-entities": {
			"global": "wp.htmlEntities"
		},
		"@wordpress/rich-text": {
			"global": "wp.richText"
		},
		"@wordpress/core-data": {
			"global": "wp.coreData"
		}
	},
	"browserslist": "> 0.25%, last 2 versions, not dead",
	"devDependencies": {
		"@parcel/resolver-glob": "^2.9.3",
		"@parcel/transformer-svg-react": "^2.9.3",
		"@wordpress/icons": "^9.29.0",
		"browser-sync": "^2.29.3",
		"classnames": "^2.3.2",
		"del-cli": "^5.0.0",
		"docsify-cli": "^4.4.4",
		"eslint-config-wesbos": "^3.2.3",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.9.3",
		"process": "^0.11.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
