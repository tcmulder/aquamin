{
	"name": "aquamin",
	"version": "3.0.2",
	"description": "Parcel build tool for Aquamarine",
	"private": true,
	"engines": {
		"node": ">=16.13.2",
		"npm": ">=9.6.3"
	},
	"config": {
		"lint_paths": "./assets",
		"build_paths": "./assets/*/*.bundle.js ./assets/*/*.bundle.css ./assets/block-library/*/*view.js ./assets/block-library/*/index.js ./assets/block-library/*/*view.css",
		"watch_paths": "./dist/**/*.css,./dist/**/*.js,./**/*.php"
	},
	"scripts": {
		"start": "clear && npm-run-all --parallel --silent builder server",
		"build": "npm run clean && parcel build $npm_package_config_build_paths --no-cache && npm run build:post",
		"build:post": "npm run static",
		"builder": "parcel watch $npm_package_config_build_paths",
		"server:pre": "test -f .env && exit 0 || echo \"\\033[31mNo .env file found (use .env.example as a template to create one)\\033[0m\"; exit 1",
		"server": "npm run server:pre && browser-sync start --logFileChanges=`grep LOG_FILE_CHANGES= .env | cut -d '=' -f2` --no-open --proxy `grep URL= .env | cut -d '=' -f2` --files $npm_package_config_watch_paths",
		"static": "del ./dist/static/* && ncp ./assets/static ./dist/static --filter '**/*.*'",
		"docs": "docsify serve docs --open --port 4000",
		"lint": "eslint -c .eslintrc.js $npm_package_config_lint_paths",
		"lint:fix": "eslint -c .eslintrc.js $npm_package_config_lint_paths --fix",
		"clean": "del ./.parcel-cache/*"
	},
	"author": "@tcmulder",
	"license": "ISC",
	"browserslist": "> 0.25%, last 2 versions, not dead",
	"devDependencies": {
		"@parcel/resolver-glob": "^2.12.0",
		"@parcel/transformer-svg-react": "^2.12.0",
		"@wordpress/element": "^5.31.0",
		"@wordpress/icons": "^9.45.0",
		"browser-sync": "^2.29.3",
		"classnames": "^2.5.1",
		"del-cli": "^5.1.0",
		"docsify-cli": "^4.4.4",
		"eslint-config-wesbos": "^4.0.1",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.12.0",
		"process": "^0.11.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
